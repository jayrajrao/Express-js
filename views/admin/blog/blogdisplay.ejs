<section class="dashboard-wrap mtb-40" style="padding-top: 125px;">
  <div class="container">
    <div class="body-content">
      <div class="row">
        <div class="col-md-3">
          <div class="dash-left">
            <ul>
              <li class="active"><a href="/admin/dashboard">Dashboard</a></li>
              <li><a href="/admin/blog" class="active">Blogs</a></li>
              <li><a href="/admin/categorydisplay">Categories</a></li>
              <li><a href="/admin/contactdisplay">Contact</a></li>
              <li><a href="/admin/about">About</a></li>
              <li><a href="/logout">Logout</a></li>
            </ul>
          </div>
        </div>
        <div class="col-md-9">
          <div class="dash-right">
            <div class="dash-header">
              <div class="dash-title">
                <h1>Blogs </h1>
              </div>
              <div class="dash-nav">
                <!-- button trigger -->
                <button
                  type="button"
                  class="btn btn-sucess"
                  data-toggle="modal"
                  data-target="#exampleModal"
                >
                  Add Blog
                </button>
              </div>
            </div>
            <table class="table table-bordered table-striped">
              <tr>
                <th>SN.NO</th>
                <th>Image</th>
                <th>Title</th>
                <th>Description</th>
                <th>Action</th>
              </tr>
                    <% i=1 %>

                    
              <% d.forEach((b)=>{ %>
              <tr>
                <td>
                  <%= i++ %>
                </td>
                <td>
                  <img src="<%= b.image.url %>" width="50px" />
                </td>
                <td><%= b.title %></td>
                <td><%= b.description %></td>
                <td>
                  <a href="/admin/blogview/<%= b._id %>"
                    ></a><i
                      class="fa-solid fa-eye"
                      style="color: deepskyblue"
                    ></i></a
                  >&#160;&nbsp;&#160;&nbsp;&#160;&nbsp;&#160;&nbsp;
                  <a href="/admin/blogedit/<%= b._id %>"
                    ><i
                      class="fa-solid fa-pen-to-square"
                      style="color: green"
                    ></i></a
                  >&#160;&nbsp;&#160;&nbsp;&#160;&nbsp;&#160;&nbsp;
                  <a href="/admin/blogdelete/<%=b._id %>"><i
                    class="fa-sharp fa-solid fa-trash" style="color: red;"></i></a>
                    
                  </a>
                </td>
              </tr>
              <% }) %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Modal -->
  <!-- Modal -->
  <div
    class="modal fade"
    id="exampleModal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form
            method="post"
            action="/bloginsert"
            enctype="multipart/form-data"
          >
            <div class="form-group form-row">
              <label class="col-md-3 required">Upload Image *</label>
              <div class="col-md-9">
                <input
                  type="file"
                  name="image"
                  class="form-control"
                  formControlName="image"
                />
              </div>
            </div>
            <!-- <form method="post" action="/bloginsert" > -->
            <div class="form-group form-row">
              <label class="col-md-3 required">Title *</label>
              <div class="col-md-9">
                <input
                  type="text"
                  name="title"
                  class="form-control"
                  placeholder="Title"
                  required
                />
              </div>
            </div>

            <div class="form-group form-row">
              <label class="col-md-3 required">Description *</label>
              <div class="col-md-9">
                <textarea
                  name="description"
                  rows="5"
                  class="form-control"
                  placeholder="Description"
                  required
                ></textarea>
              </div>
            </div>

            <!-- <form method="post" action="/bloginsert" enctype="multipart/form-data">  -->
            <!-- <div class="form-group form-row">
                        <label class="col-md-3">Upload Image *</label>
                        <div class="col-md-9">
                          <input type="file"  name="image">
                        </div>
                      </div> -->

            <div class="form-group form-row">
              <label class="col-md-3"></label>
              <div class="col-md-9">
                <button type="submit" class="btn btn-secondary">submit</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
              
  </div>
</section>

