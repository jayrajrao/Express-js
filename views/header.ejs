<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <title><%= metaTitle || "ArticleFlow" %></title>

  <meta
    name="description"
    content="<%= metaDescription || 'A modern tech blog built with Node.js' %>"
  />

  <!-- Open Graph -->
  <meta property="og:title" content="<%= metaTitle || 'ArticleFlow' %>" />
  <meta property="og:description" content="<%= metaDescription || '' %>" />
  <meta property="og:image" content="<%= metaImage || '' %>" />
  <meta property="og:url" content="<%= shareUrl || '' %>" />
  <meta property="og:type" content="article" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="<%= metaTitle || 'ArticleFlow' %>" />
  <meta name="twitter:description" content="<%= metaDescription || '' %>" />
  <meta name="twitter:image" content="<%= metaImage || '' %>" />

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <!-- Font Awesome -->
  <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    rel="stylesheet"
  />

  <!-- Main CSS -->
  <link rel="stylesheet" href="/css/styles.css" />
</head>

<body>

<!-- ================= NAVBAR ================= -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow-sm">
  <div class="container">

    <!-- BRAND -->
    <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
      <img
        src="/images/blogging.png"
        alt="ArticleFlow Logo"
        width="36"
        height="36"
        class="me-2"
      />
      ArticleFlow
    </a>

    <!-- TOGGLER -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarMain"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- MENU -->
    <div class="collapse navbar-collapse" id="navbarMain">
      <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-3">

        <!-- LINKS -->
        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
        <li class="nav-item"><a class="nav-link" href="/blog">Blogs</a></li>
        <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>

        <!-- THEME TOGGLE (ALWAYS VISIBLE) -->
        <li class="nav-item">
          <button id="themeToggle" aria-label="Toggle theme">
            ðŸŒ™
          </button>
        </li>

        <% if (!user) { %>
          <!-- NOT LOGGED IN -->
          <li class="nav-item">
            <a class="btn btn-outline-light btn-sm px-3" href="/user/login">
              Login
            </a>
          </li>
          <li class="nav-item">
            <a class="btn btn-warning btn-sm px-3" href="/user/register">
              Register
            </a>
          </li>
        <% } else { %>
          <!-- LOGGED IN -->
          <li class="nav-item">
            <span class="nav-link fw-semibold text-white">
              Hi, <%= user.name %>
            </span>
          </li>
          <li class="nav-item">
            <a class="btn btn-outline-light btn-sm px-3" href="/user/logout">
              Logout
            </a>
          </li>
        <% } %>

      </ul>
    </div>
  </div>
</nav>

<!-- ================= PAGE CONTENT START ================= -->
<div class="page-wrapper">
