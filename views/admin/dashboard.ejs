<%- include('../header.ejs') %>
<%- include('../partials/messages.ejs') %>

<div class="container-fluid mt-5 pt-4">
  <div class="row">

    <!-- SIDEBAR -->
    <div class="col-md-3">
      <%- include('../partials/sidebar') %>
    </div>

    <!-- CONTENT -->
    <div class="col-md-9">

      <div class="mb-4">
        <h4 class="fw-bold mb-1">
          Welcome, <%= admin?.email || 'Admin' %>
        </h4>
        <p class="text-muted mb-0">Admin Control Panel</p>
      </div>

      <div class="row g-3">

        <div class="col-md-3">
          <div class="dashboard-card bg-blog text-center">
            <p class="mb-1">Total Blogs</p>
            <h3 class="fw-bold"><%= blogCount %></h3>
          </div>
        </div>

        <div class="col-md-3">
          <div class="dashboard-card bg-category text-center">
            <p class="mb-1">Active Categories</p>
            <h3 class="fw-bold"><%= categoryCount %></h3>
          </div>
        </div>

        <div class="col-md-3">
          <div class="dashboard-card bg-comment text-center">
            <p class="mb-1">Pending Comments</p>
            <h3 class="fw-bold"><%= pendingComments %></h3>
          </div>
        </div>

        <div class="col-md-3">
          <div class="dashboard-card bg-user text-center">
            <p class="mb-1">Total Users</p>
            <h3 class="fw-bold"><%= userCount %></h3>
          </div>
        </div>

      </div>

    </div>
  </div>
</div>

<%- include('../footer.ejs') %>
