<%- include ('../../header.ejs') %>

    <section class="dashboard-wrap mtb-40">
        <div class="container">
            <div class="body-content">
                <div class="row">
                    <div class="col-md-3">
                        
                    </div>
                    <div class="col-md-9">
                        <div class="dash-right">
                            <div class="dash-header">
                                <div class="dash-title">
                                    <h1>Category of <%= categoryview._id %>
                                    </h1>
                                </div>
                                <div class="dash-nav">
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-primary" data-toggle="modal"
                                        data-target="#exampleModal" style="background-color: #dbc100; border: black;">
                                        Add Category
                                    </button>
                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                                    <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">

                                                    <form method="post" action="/categoryinsert">

                                                        <div class="form-group form-row">
                                                            <label class="col-md-3 required">Category Title *</label>
                                                            <div class="col-md-9">
                                                                <input type="text" class="form-control"
                                                                    placeholder="Title" required name="categoryname">
                                                            </div>
                                                        </div>


                                                        <div class="form-group form-row">
                                                            <label class="col-md-3"></label>
                                                            <div class="col-md-9">

                                                                <button type="submit" class="btn btn-primary">Save
                                                                    changes</button>
                                                            </div>
                                                        </div>



                                                    </form>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <table class="table table-bordered table-striped">
                                <tr>
                                    <th>S.No</th>

                                    <th>Category Title</th>

                                </tr>

                                <tr>
                                    <td>
                                        <%= categoryview._id %>
                                    </td>
                                    <td>
                                        <%= categoryview.categoryname %>
                                    </td>

                                </tr>



                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include ('../../footer.ejs') %>