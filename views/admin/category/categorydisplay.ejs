<%- include ('../../header.ejs') %>

    <section class="dashboard-wrap mtb-40" style="padding-top: 125px;">
        <div class="container">
            <div class="body-content">
                <div class="row">
                    <div class="col-md-3">
                        
                    </div>
                    <div class="col-md-9">
                        <div class="dash-right">
                            <div class="dash-header">
                                <div class="dash-title">
                                    <h1>Category</h1>
                                </div>
                                <div class="dash-nav">
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-primary" data-toggle="modal"
                                        data-target="#exampleModal" style="background-color: #dbc100; border: black;">
                                        Add Category
                                    </button>
                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                                    <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">

                                                    <form method="post" action="/categoryinsert" enctype="multipart/form-data" >

                                                        <div class="form-group form-row">
                                                            <label class="col-md-3 required">Category Title *</label>
                                                            <div class="col-md-9">
                                                                <input type="text" class="form-control"
                                                                    placeholder="Title" required
                                                                    name="categoryname">
                                                            </div>
                                                        </div>
                                                        <div class="form-group form-row">
                                                            <label class="col-md-3 required">Upload Image *</label>
                                                            <div class="col-md-9">
                                                                <input type="file" name="image" class="form-control"  >
                                                            </div>
                                                        </div>


                                                        <div class="form-group form-row">
                                                            <label class="col-md-3"></label>
                                                            <div class="col-md-9">
                                                                
                                                                <button type="submit" class="btn btn-primary">Save
                                                                    changes</button>
                                                            </div>
                                                        </div>



                                                    </form>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <table class="table table-bordered table-striped">
                                <tr>
                                    <th>S.No</th>
                                  
                                    <th>Category Title</th>
                                    <th>Action</th>
                                </tr>
                                <% i=1 %>
                                <% cd.forEach((c)=>{ %>
                                        <tr>
                                            <td><%= i++ %> </td>
                                            <td><%= c.categoryname %></td>
                                            <td><a href="/admin/categoryview/<%= c._id %>" ><i class="fa-solid fa-eye" style="color: deepskyblue;"></i></a>&#160;&nbsp;&#160;&nbsp;&#160;&nbsp;&#160;&nbsp;
                                                <a href="/admin/categoryedit/<%=c._id %>" ><i class="fa-solid fa-pen-to-square" style="color: green;"></i></a>&#160;&nbsp;&#160;&nbsp;&#160;&nbsp;&#160;&nbsp;
                                                <a href="/admin/categorydelete/<%=c._id %>"><i class="fa-sharp fa-solid fa-trash" style="color: red;"></i></a>
                                            </td>
                                        </tr>
                                <% }) %>


                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include ('../../footer.ejs') %>